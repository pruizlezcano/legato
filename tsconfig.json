{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/renderer/*"],
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll", "docs"],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
}
